def parse_options():
    parser = optparse.OptionParser()
    parser.add_option("-c", 
                      "--config", 
                      dest="config", 
                      metavar="FILE",
                      help="Load configuration from FILE.",
                      default="etc/stacktester.cfg")
    parser.add_option("-v",
                      "--verbose",
                      dest="verbose",
                      action="store_true",
                      help="Toggle verbose output.")
    return parser.parse_args()


if __name__ == "__main__":
    sys.exit(main())
